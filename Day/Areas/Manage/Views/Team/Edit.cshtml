@model TeamMember
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="edit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="FullName" class="form-label">FullName</label>
        <input asp-for="FullName" class="form-control">
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Profession" class="form-label">Profession</label>
        <input asp-for="Profession" class="form-control">
        <span class="text-danger" asp-validation-for="Profession"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Desc" class="form-label">Desc</label>
        <input asp-for="Desc" class="form-control">
        <span class="text-danger" asp-validation-for="Desc"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TwitterUrl" class="form-label">TwitterUrl</label>
        <input asp-for="TwitterUrl" class="form-control">
        <span class="text-danger" asp-validation-for="TwitterUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FacebookUrl" class="form-label">FacebookUrl</label>
        <input asp-for="FacebookUrl" class="form-control">
        <span class="text-danger" asp-validation-for="FacebookUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="InstagramUrl" class="form-label">InstagramUrl</label>
        <input asp-for="InstagramUrl" class="form-control">
        <span class="text-danger" asp-validation-for="InstagramUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LinkedinUrl" class="form-label">LinkedinUrl</label>
        <input asp-for="LinkedinUrl" class="form-control">
        <span class="text-danger" asp-validation-for="LinkedinUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">ImageFile</label>
        <input asp-for="ImageFile" class="form-control">
        <span class="text-danger" asp-validation-for="ImageFile"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>